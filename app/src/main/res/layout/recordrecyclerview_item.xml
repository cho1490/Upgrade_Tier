<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/first_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/ll_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="00"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginStart="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:weightSum="8">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_champion"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_spell1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="1dp"/>

                    <ImageView
                        android:id="@+id/iv_spell2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:weightSum="2">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_rune1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="1dp"
                        app:civ_circle_background_color="#3A3838"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_rune2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="2dp"
                        app:civ_circle_background_color="#3A3838" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_kill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="15dp"
                            android:layout_marginStart="3dp"/>

                        <TextView
                            android:id="@+id/tv_death"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#DC1414"
                            android:textSize="16dp"
                            android:layout_marginStart="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="15dp"
                            android:layout_marginStart="3dp"/>

                        <TextView
                            android:id="@+id/tv_assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_marginStart="3dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_percent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/iv_item1"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:background="@drawable/edit_imageview1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_item2"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/edit_imageview1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_item3"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/edit_imageview1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_item4"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/edit_imageview1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_item5"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/edit_imageview1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_item6"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/edit_imageview1"
                        android:scaleType="centerCrop" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_item7"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="5dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_game_mode"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#969696"
                android:textSize="13dp"
                android:gravity="bottom"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_game_ago"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_game_ago"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#969696"
                android:textSize="13dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_game_mode"
                app:layout_constraintBottom_toTopOf="@id/tv_badge"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_badge"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="15dp"
                android:gravity="top"
                android:textColor="#FF9800"
                app:layout_constraintTop_toBottomOf="@id/tv_game_ago"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



